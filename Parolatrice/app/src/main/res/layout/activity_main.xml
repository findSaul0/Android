<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/insert"
            android:layout_marginRight="10dp"
            android:textSize="80px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="80px"
            android:id="@+id/result"
            android:text="Risultato"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:id="@+id/countWord"
            android:text="Conta caratteri"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:id="@+id/orderReverse"
            android:layout_marginLeft="1dp"
            android:text="Inverti oridine"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_height="wrap_content"
            android:id="@+id/rightTroncation"
            android:text="Tronca Destra"
            android:textSize="30px"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:id="@+id/leftTroncation"
            android:text="Tronca Sinistara"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:id="@+id/raddoppia"
            android:layout_marginLeft="1dp"
            android:text="Raddoppia"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_marginLeft="1dp"
            android:id="@+id/saveInMemory"
            android:layout_height="wrap_content"
            android:text="Memorizza"
            android:textSize="30px"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/plus"
            android:textSize="30px"
            android:text="+"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:id="@+id/clearMemory"
            android:layout_marginLeft="1dp"
            android:text="Clear Memoria"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_marginLeft="1dp"
            android:id="@+id/clearInserisci"
            android:layout_height="wrap_content"
            android:text="Clear Inserisci"
            android:textSize="30px"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clearResult"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textSize="30px"
        android:text="Clear result"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="80px"
        android:id="@+id/memory"
        android:text="Memoria"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"/>
</LinearLayout>