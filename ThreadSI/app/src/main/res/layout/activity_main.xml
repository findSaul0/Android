<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:fontFamily="sans-serif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Premi Carica per caricare la prossima immagine"
        android:textSize="20dp"
        android:textAlignment="center"
        android:id="@+id/tvTextTesto"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ButtonCarica"
        android:text="Carica"
        android:onClick="Load"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

                <ImageView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:background="#222222"
                    android:id="@+id/Imageview"
                android:scaleType="centerInside"
                    android:layout_marginTop="5dp"
                android:layout_gravity="center"/>

                <ProgressBar
                    android:id="@+id/progressBar_cyclic"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:visibility="invisible" />

    </RelativeLayout>


                <TextView
                    android:fontFamily="sans-serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Premi Incrementa per aumentare il contatore"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    android:layout_marginTop="50dp" />



                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ButtonIncremento"
                    android:text="Incrementa"
                    android:onClick="UpgradeCounter"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/counter"
                    android:layout_gravity="center"
                    android:textSize="100dp"
                    android:layout_marginTop="7dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Permessi"
                    android:layout_gravity="center"
                    android:id="@+id/Permessi"
                    android:textSize="15dp"
                    android:onClick="AcceptedPermission"/>

                <TextView
                    android:id="@+id/tvPermessi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Il permetto Ã¨ abilitato?: "
                    android:layout_gravity="center"
                    android:textAlignment="center"/>

</LinearLayout>