<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:text="Nome:"
                android:textSize="20dp" />


            <EditText
                android:id="@+id/tvNome"
                android:layout_width="206dp"
                android:layout_height="56dp"
                android:hint="inserisci nome" />


        </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="74dp"
                    android:layout_height="wrap_content"
                    android:text="Voto:"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/tvVoto"
                    android:layout_width="127dp"
                    android:layout_height="56dp"
                    android:hint="inserisci voto" />
            </LinearLayout>

    <Button
        android:id="@+id/buttonInserisci"
        android:layout_width="401dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:onClick="Inserisci"
        android:text="Inserisci" />

    <TextView
        android:layout_width="403dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@color/purple_700"
        android:text="Lista Voti"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="20dp" />


    <ListView
        android:id="@+id/primaList"
        android:layout_width="wrap_content"
        android:layout_height="110dp" />




    <TextView
        android:layout_width="406dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@color/purple_700"
        android:text="Lista Voti >25"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp" />


    <ListView
        android:id="@+id/secondaList"
        android:layout_width="wrap_content"
        android:layout_height="106dp" />


    

</LinearLayout>